{% extends 'SupportUsBundle::base.html.twig' %}

{% block title %}Support Us! Become a supporter of MediaArea{% endblock %}
{% block description %}Support Us! Become a supporter of MediaArea{% endblock %}
{% block keywords %}Donation subscriber supporter member crowdfunding{% endblock %}

{% block body %}
<div>
    <h1>Become a MediaArea supporter</h1>
    <p>
        (Your company could be interested? Check also our <a href="{{ path('supportUs_corporate') }}">corporate page</a>)
    </p>
    <p>
        {% if country %}{% trans with { '%country%': country, '%currency%': currency.currency } %}donate.location_currency{% endtrans %}<br>{% endif %}
    </p>
    <p>Choose your amount (VAT {% if vatRate %}{{ vatRate }}% {% endif %}included):<br/>&nbsp;</p>
</div>
<p>Select a plan:</p>
<div class="text-center">
    <button type="button" class="btn btn-primary btn-large btn-support-us btn-individual-member">
        <span class="plan-title">Member</span>
        <hr>
        <span>10 € / year</span>
    </button>
    <button type="button" class="btn btn-primary btn-large btn-support-us btn-individual-voter">
        <span class="plan-title">Voter</span>
        <hr>
        <span>30 € / year</span>
    </button>
    <button type="button" class="btn btn-primary btn-large btn-support-us btn-individual-supporter-bronze">
        <span class="plan-title">Supporter</span>
        <hr>
        <span>100 € / year</span>
    </button>
    <button type="button" class="btn btn-primary btn-large btn-support-us btn-individual-supporter-silver">
        <span class="plan-title">Supporter+</span>
        <hr>
        <span>300 € / year</span>
    </button>
    <button type="button" class="btn btn-primary btn-large btn-support-us btn-individual-supporter-gold">
        <span class="plan-title">Supporter++</span>
        <hr>
        <span>500 € / year</span>
    </button></div>

<p>Or customize it:</p>
<input id="slider" data-slider="true" data-slider-range="0,22" data-slider-step="1" data-slider-snap="true" data-slider-highlight="true" style="display: none;" value="4" type="text">

<div class="support-us-features-list">
    <p id="individual-label"></p>
</div>

<div class="form-group row pay">
    <div class="col-sm-12">
        {% if not app.user %}{% trans with { '%login%': path('fos_user_security_login'), '%register%': path('fos_user_registration_register') } %}donate.not_loggued_in{% endtrans %}{% endif %}
        <p>Pay with:</p>
    </div>
    <div class="col-sm-6">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Credit Card</button>
    </div>
    <div class="col-sm-6">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Paypal</button>
    </div>
</div>

<div class="form-group row no-pay hidden">
    <p>&nbsp;</p>
    <div class="col-sm-12">
        <a class="btn btn-primary btn-lg btn-block btn-support" href="{{ path('supportUs_about') }}">Financially embarrassed? Help us spread the word!</a>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{% stylesheets
    '@SupportUsBundle/Resources/public/css/simple-slider.css'
    '@SupportUsBundle/Resources/public/css/supportUs.css'
    filter='?scssphp' output='css/supportUs.css'
 %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% javascripts
    '@SupportUsBundle/Resources/public/js/simple-slider.min.js'
    '@SupportUsBundle/Resources/public/js/supportUsSlider.js'
    filter="?jsqueeze" output='js/supportUs.js'
 %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

<script>
    $(document).ready(function() {
        supportUs.initIndividual('{{ currency.currencySymbol }}');
    });
</script>
{% endblock %}
