<div class="col-lg-4 col-sm-6">
    <div class="form-group">
        <label class="col-sm-5 control-label" for="mediabin-expiration">
            {% trans %}mediabin.create.expiration.label{% endtrans %}
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="popover" data-container="body" data-trigger="hover" data-placement="auto top" title="{% trans %}mediabin.help.expiration.title{% endtrans %}" data-html="true" data-content="{% trans %}mediabin.help.expiration.content{% endtrans %}"></span>
        </label>
        <div class="col-sm-7">
            {% if bin.expireAt is defined %}
                <span class="mediabin-expiration-edit" title="Click to edit">
                    <span class="mediabin-expiration-date">
                        {% if bin.expireAt is not null %}
                            {{ bin.expireAt|date('Y-m-d H:i') }}
                        {% else %}
                            {% trans %}mediabin.create.expiration.never{% endtrans %}
                        {% endif %}
                    </span>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </span>
            {% endif %}
            <select id="mediabin-expiration" class="form-control mediabin-expiration{% if bin.expireAt is defined %} mediabin-expiration-with-edit hidden{% endif %}">
                <option value="10m">{% trans %}mediabin.create.expiration.10m{% endtrans %}</option>
                <option value="1h">{% trans %}mediabin.create.expiration.1h{% endtrans %}</option>
                <option value="1d">{% trans %}mediabin.create.expiration.1d{% endtrans %}</option>
                <option value="1w">{% trans %}mediabin.create.expiration.1w{% endtrans %}</option>
                <option value="1m">{% trans %}mediabin.create.expiration.1m{% endtrans %}</option>
                <option value="1y" selected>{% trans %}mediabin.create.expiration.1y{% endtrans %}</option>
                <option value="-1">{% trans %}mediabin.create.expiration.never{% endtrans %}</option>
            </select>
            {% if bin.expireAt is defined %}
                <span class="glyphicon glyphicon-remove mediabin-expiration-cancel hidden" aria-hidden="true" title="Cancel edition of expiration"></span>
            {% endif %}
        </div>
    </div>
</div>
<div class="col-lg-3 col-sm-6">
    <div class="form-group">
        <label class="col-sm-3 control-label" for="mediabin-title">
            {% trans %}mediabin.create.title.label{% endtrans %}
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="popover" data-container="body" data-trigger="hover" data-placement="auto top" title="{% trans %}mediabin.help.title.title{% endtrans %}" data-html="true" data-content="{% trans %}mediabin.help.title.content{% endtrans %}"></span>
        </label>
        <div class="col-sm-9">
            <input type="text" id="mediabin-title" class="form-control mediabin-title" {% if bin.title %}value="{{ bin.title }}"{% else %}placeholder="{% trans %}mediabin.create.title.placeholder{% endtrans %}"{% endif %}>
        </div>
    </div>
</div>
<div class="col-lg-3 col-sm-6">
    <div class="form-group">
        <label class="col-sm-5 control-label" for="mediabin-visibility">
            {% trans %}mediabin.create.visibility.label{% endtrans %}
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="popover" data-container="body" data-trigger="hover" data-placement="auto top" title="{% trans %}mediabin.help.visibility.title{% endtrans %}" data-html="true" data-content="{% trans %}mediabin.help.visibility.content{% endtrans %}"></span>
        </label>
        <div class="col-sm-7">
            <select id="mediabin-visibility" class="form-control mediabin-visibility">
                <option value="0"{% if 0 == bin.visibility %} selected{% endif %}>{% trans %}mediabin.create.visibility.public{% endtrans %}</option>
                <option value="1"{% if 1 == bin.visibility %} selected{% endif %}>{% trans %}mediabin.create.visibility.hidden{% endtrans %}</option>
            </select>
        </div>
    </div>
</div>
<div class="col-lg-2 col-sm-6">
    <div class="form-group">
        <div class="col-sm-2 visible-xs-block"></div>
        <div class="col-sm-10">
            <label for="mediabin-anonymize" class="control-label">
                {% trans %}mediabin.create.anonymize.label{% endtrans %}
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="popover" data-container="body" data-trigger="hover" data-placement="auto top" title="{% trans %}mediabin.help.anonymize.title{% endtrans %}" data-html="true" data-content="{% trans %}mediabin.help.anonymize.content{% endtrans %}"></span>
            </label>
            <input type="checkbox" id="mediabin-anonymize" name="mediabin-anonymize" value="1"{% if 1 == bin.anonymize %} checked{% endif %}>
        </div>
    </div>
</div>
